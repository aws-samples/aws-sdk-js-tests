{
  "name": "@aws-sdk/test",
  "version": "1.0.0",
  "description": "Monorepo with code samples for testing AWS SDK for JavaScript",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:node": "(cd packages/node && yarn start:node)",
    "start:browser": "(cd packages/browser && yarn start:browser)",
    "start:react-native:ios": "(cd packages/reactnative && yarn start:react-native:ios)",
    "start:react-native:android": "(cd packages/reactnative && yarn start:react-native:android)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aws-samples/aws-sdk-js-tests.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT-0",
  "bugs": {
    "url": "https://github.com/aws-samples/aws-sdk-js-tests/issues"
  },
  "homepage": "https://github.com/aws-samples/aws-sdk-js-tests#readme",
  "devDependencies": {
    "husky": "4.3.6",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": "prettier --write"
  }
}
